<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical" >

    <com.kimikanen.uilib.customfontwidgets.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Roboto-Thin"
        myapp:typeface="Roboto-Thin" />

    <com.kimikanen.uilib.customfontwidgets.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Oklahoma"
        myapp:typeface="Oklahoma" />

    <com.kimikanen.uilib.customfontwidgets.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Roboto-Regular"
        myapp:typeface="Roboto-Regular" />

    <com.kimikanen.uilib.customfontwidgets.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Oklahoma"
        myapp:typeface="Oklahoma" />

    <com.kimikanen.uilib.customfontwidgets.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Roboto-Thin"
        myapp:typeface="Roboto-Thin" />

    <com.kimikanen.uilib.customfontwidgets.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Roboto-Regular"
        myapp:typeface="Roboto-Regular" />

    <com.kimikanen.uilib.customfontwidgets.CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Roboto-Thin"
        myapp:typeface="Roboto-Thin" />

    <com.kimikanen.uilib.customfontwidgets.CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Oklahoma"
        myapp:typeface="Oklahoma" />

</LinearLayout>